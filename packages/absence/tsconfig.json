{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "sourceMap": true,
    "removeComments": true
  },

  "ts-node": { "files": true }
}
